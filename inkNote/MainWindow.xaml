<Window x:Class="WpfAppTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTest"
        mc:Ignorable="d"
        Title="Note" Height="350" Width="525">
    <Grid>       
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Save" Click="Save_button_click"/>

                <MenuItem Header="Load" Click="Load_button_click"/>

                <MenuItem Header="Clear" Click="Clear_button_click"/>
                <MenuItem Header="Undo" Click="Undo_button_click"/>

            </Menu>



            <InkCanvas x:Name="inkCanvas" MouseLeftButtonDown="Mouse_left_down" MouseLeftButtonUp="Mouse_left_up"/>


        </DockPanel>
    </Grid>
</Window>
